<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>
<%- include ("../../partials/sidebar.ejs") %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Detail Konsultasi</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/consultation">Konsultasi</a></li>
              <li class="breadcrumb-item active">Detail Konsultasi</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Konsultasi</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/consultation/detail/<%= getConsultationData.id %>?_method=PUT" method="post">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="title">Penanya</label>
                      <input type="text" name="asker" class="form-control" id="asker" value="<%= getConsultationData.asker %>" placeholder="Masukkan Judul" required disabled>
                    </div>
                    <div class="form-group">
                      <label for="title">Pertanyaan</label>
                      <input type="text" name="question" class="form-control" id="question" value="<%= getConsultationData.question %>" placeholder="Masukkan Judul" required disabled>
                    </div>
                    <div class="form-group">
                        <label for="title">Masukkan Jawaban</label>
                        <textarea id="summernote" name="answer">
                            <% if (getConsultationData.answer === null) { %>
                                Add your answer here
                            <% } else  {%>
                            <%= getConsultationData.answer %>
                            <% } %>
                        </textarea>
                      </div>
                  </div>
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                  </div>
                </form>
              </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

<%- include ("../../partials/footer.ejs") %>
<%- include ("../../partials/js.ejs") %>
<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>
<%- include ("../../partials/sidebar.ejs") %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Tambah Artikel</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/article">Akun</a></li>
              <li class="breadcrumb-item active">Tambah Artikel</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Tambah Artikel</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/article/add" method="post">
                  <div class="card-body">
                    <div class="form-group">
                      <label>Pilih Kategori</label>
                       <select class="form-control select2" style="width: 100%;" name="categoryId" required>
                          <option selected="selected">Pilih Kategori</option>
                          <% getCategory.forEach(category => { %>
                              <option value="<%= category.id %>"><%= category.name %></option>
                          <% }) %>
                      </select>
                  </div>
                    <div class="form-group">
                      <label for="image">Masukkan Gambar</label>
                      <input type="file" name="image" class="form-control" id="image" placeholder="Masukkan Gambar" required>
                    </div>
                    <div class="form-group">
                      <label for="title">Masukkan Judul</label>
                      <input type="password" name="title" class="form-control" id="title" placeholder="Masukkan Judul" required>
                    </div>
                    <div class="form-group">
                      <label for="title">Masukkan Konten</label>
                      <textarea id="summernote">
                        Add your content here
                      </textarea>
                    </div>
                  </div>
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                  </div>
                </form>
              </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

<%- include ("../../partials/footer.ejs") %>
<%- include ("../../partials/js.ejs") %>